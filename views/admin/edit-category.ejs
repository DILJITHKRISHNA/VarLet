    padding: 8px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }

  button {
    margin-top: 20px;
    padding: 10px 20px;
    background-color: #4CAF50;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }

  /* Responsive Design */
  @media screen and (max-width: 600px) {
    .container {
      padding: 10px;
    }

    label {
      margin-top: 5px;
    }

    input,
    textarea {
      padding: 6px;
    }

    button {
      margin-top: 10px;
      padding: 8px 16px;
    }
  }
</style>

