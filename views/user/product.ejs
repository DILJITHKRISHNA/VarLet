<script>
	function AddToCart(Id) {
		
		$.ajax({
			url:'/add-to-cart',
			data: {
				productId:Id
			},
			method: 'post',
			success: (res) => {
				if (res.status) {
					alert("true")
					const cartMessage = document.getElementById('cart-message');
					cartMessage.style.display = 'block';

					// Hide the message after 2 seconds

					setTimeout(() => {
           			cartMessage.style.display = 'none';
          			}, 2000);

					Swal.fire({
						position: 'center',
						icon: 'success',
						title: 'Your product added to Cart',
						showConfirmButton: false,
						timer: 1000
					})
				} else {
					alert("Already existing in your cart ")
					Swal.fire({
						icon: 'error',
						title: 'oops...',
						Text: 'item already exist in cart',
						timer: 1000
					})
				}
			}
		})
	}

function show(id){

        $.ajax({ 
        url:"/wishList",
        method:"post",
        data:{
        proId:id
        },
        success:(response)=>{
        if(response.success){
            swal.fire({
                position:'center',
                icon:'success',
                title:'Product added to wishList',
