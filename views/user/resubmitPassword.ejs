          </div><!-- .End .tab-pane -->
      </div><!-- End .tab-content -->
    </div><!-- End .form-tab -->
        </div><!-- End .form-box -->
      </div><!-- End .container -->
    </div><!-- End .login-page section-bg -->
</main><!-- End .main -->
