
<style>

    /* Main styles */
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
}

.main {
  position: relative;
}

.container {
  max-width: 800px;
  margin: 0 auto;
  padding: 0 15px;
}

/* Login page styles */
.login-page {
  position: relative;
  background-size: cover;
  background-repeat: no-repeat;
}

.bg-image {
  /* Add your background image URL here */
  background-image: url('your-background-image.jpg');
}

.pt-8 {
  padding-top: 8px;
}

.pb-8 {
  padding-bottom: 8px;
}

.pt-md-12 {
  padding-top: 12px;
}

.pb-md-12 {
  padding-bottom: 12px;
}

.pt-lg-17 {
  padding-top: 17px;
}

.pb-lg-17 {
  padding-bottom: 17px;
}

.form-box {
  background-color: #fff;
  border-radius: 8px;
  padding: 20px;
  margin-top: 50px;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
}

.form-tab {
  margin-bottom: 30px;
}

.tab-content {
  padding-top: 20px;
}

.form-group {
  margin-bottom: 20px;
}

.form-group label {
  display: block;
  font-weight: 600;
  margin-bottom: 5px;
}

.form-control {
  width: 100%;
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.form-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20px;
}

.btn {
  padding: 12px 20px;
  border-radius: 4px;
  cursor: pointer;
  font-weight: 600;
  transition: background-color 0.3s ease;
}

.btn-outline-primary-2 {
  border: 2px solid #007bff;
  color: #007bff;
}

.btn-outline-primary-2:hover {
  background-color: #007bff;
  color: #fff;
}

.custom-control {
  display: inline-flex;
  align-items: center;
}

.custom-checkbox {
  margin-right: 10px;
}

.form-choice {
  text-align: center;
  margin-top: 20px;
}

.btn-login {
  display: inline-block;
  padding: 10px 20px;
  background-color: #007bff;
  color: #fff;
  border-radius: 4px;
  text-decoration: none;
  font-weight: 600;
  transition: background-color 0.3s ease;
}

.btn-login:hover {
  background-color: #0056b3;
}

/* Alert styles */
.alert {
  background-color: #f8d7da;
  color: #721c24;
  padding: 10px 15px;
  border-radius: 4px;
  margin-bottom: 20px;
}

/* Responsive styles */
@media (max-width: 767px) {
  .nav-pills {
    flex-wrap: wrap;
  }
  .nav-link {
    flex-grow: 1;
    text-align: center;
  }
}

@media (max-width: 575px) {
  .form-choice {
    text-align: center;
  }
  .col-sm-6 {
    margin-top: 10px;
  }
}


</style>

  <main class="main">
    <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('')">
      <div class="container">
        <div class="form-box">
          <div class="form-tab">
      <div class="tab-content">
          
            <form action="/resubmitPassword" method="post">
              <div class="form-group pt-5">
                <label for="singin-email-2 ">New Password *</label>
                <input type="password" class="form-control" id="singin-email-2" name="password" required>
              </div><!-- End .form-group -->

              <div class="form-group">
                <label for="singin-password-2">confirm Password *</label>
                <input type="password" class="form-control" id="singin-password-2" name="password2" required>
              </div><!-- End .form-group -->

              <div class="form-footer">
                <button type="submit" class="btn btn-outline-primary-2">
                        <span>SUBMIT</span>
                      <i class="icon-long-arrow-right"></i>
                      </button>

                      <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="signin-remember-2">
                
              </div><!-- End .custom-checkbox -->

              
              </div><!-- End .form-footer -->
              <% 

              if(typeof message !== 'undefined' ){
                
                %>
                  <div class="alert alert-danger" role="alert">
                    <%= message %>
                  </div>
      
                <% 
      
              }
            %>
            </form>
            <div class="form-choice">
              
              <div class="row">
                <div class="col-sm-6">
                  <p class="text-dark text-end"></p> 
                </div><!-- End .col-6 -->
              </div><!-- End .row -->
            </div><!-- End .form-choice -->
          </div><!-- .End .tab-pane -->
